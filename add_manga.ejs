<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-12 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Manga</h3>
                </div>
                <div class="card-body p-4">
                    <!-- New form for adding manga -->
                    <form action="/add_manga" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="mangaName">Manga Name</label>
                            <input type="text" name="mangaName" class="form-control form-control-lg" placeholder="Enter Manga Name" required />
                        </div>
                        <div class="mb-4">
                            <label for="volumes">Volumes</label>
                            <input type="number" name="volumes" class="form-control form-control-lg" placeholder="Enter Volumes" required />
                        </div>
                        <div class="mb-4">
                            <label for="finished">Finished</label>
                            <input type="text" name="finished" class="form-control form-control-lg" placeholder="Enter If You Have Finished or Not" required />
                        </div>

                        <div class="mb-4 d-grid">
                            <input type="submit" name="submit" value="Add Manga" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>