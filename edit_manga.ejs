<%- include('layout/header') %>


<div class="container">
  <div class="row">
    <div class="col-12 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-success">
          <h3 class="text-light">Edit Manga (<%= user.name %>)</h3>
        </div>
        <div class="card-body p-4">
          <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="Manga Name">Manga Name</label>
              <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Manga Name" value="<%= user.name %>" required />
            </div>
            <div class="mb-3">
              <label for="Chapters">Chapters</label>
              <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter Manga Chapters" value="<%= user.email %>" required />
            </div>
            <div class="mb-3">
              <label for="Finished">Finished</label>
              <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter If You Hve Finished The Manga or Not" value="<%= user.phone %>" required />
            </div>
          </form>
        </div>
      </div>
    </div>  
  </div>
</div>


<%- include('layout/footer') %>