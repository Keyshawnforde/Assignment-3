<%- include('layout/header') %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
        <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
        <% } %>
        <div class="table-responsive">
            <% if (users && users.length > 0) { %>
                <table class="table table-bordered table-striped text-center my-3">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Manga Name</th>
                            <th>Volumes</th>
                            <th>Finished</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((row, index) => { %>
                            <tr class="align-middle">
                                <!--Rows-->
                                <td><%= index + 1 %></td>
                                <td><%= row.Manga %></td>
                                <td><%= row.Volumes %></td>
                                <td><%= row.Finished %></td>
                                <td>
                                    <a href="/edit/<%= row._id %>" class="btn btn-success btn-sm"><i class="fas fa-edit"></i> Edit</a>
                                    <a href="/delete/<%= row._id %>" class="btn btn-danger btn-sm"><i class="fas fa-delete"></i> Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <!--Tells the user there is no manga in the directory-->
                <h1 class="text-center text-secondary mt-5">No Manga found in directory</h1>
            <% } %>
        </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>